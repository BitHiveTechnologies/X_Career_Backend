{
  "name": "notifyx-backend",
  "version": "1.0.0",
  "description": "NotifyX Backend - Job notification platform backend with user management, subscription processing, job matching algorithms, and automated notification delivery",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "dev:build": "tsc && node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist",
    "lint": "echo \"Linting not configured yet\"",
    "lint:fix": "echo \"Linting not configured yet\"",
    "seed:test-data": "ts-node scripts/seedTestData.ts",
    "test:admin": "ts-node scripts/testAdminFunctionality.ts",
    "test:admin:auth": "ts-node -e \"import('./scripts/testAdminFunctionality.ts').then(m => m.runAllTests())\"",
    "test:admin:dashboard": "ts-node -e \"import('./scripts/testAdminFunctionality.ts').then(m => m.testAdminDashboard())\"",
    "test:admin:users": "ts-node -e \"import('./scripts/testAdminFunctionality.ts').then(m => m.testUserManagement())\"",
    "test:admin:jobs": "ts-node -e \"import('./scripts/testAdminFunctionality.ts').then(m => m.testJobManagement())\"",
    "test:admin:subscriptions": "ts-node -e \"import('./scripts/testAdminFunctionality.ts').then(m => m.testSubscriptionManagement())\"",
    "test:admin:audit": "ts-node -e \"import('./scripts/testAdminFunctionality.ts').then(m => m.testAuditLogs())\"",
    "test:comprehensive": "ts-node scripts/comprehensiveApiTest.ts",
    "test:setup": "ts-node scripts/setupTestEnvironment.ts",
    "fix:indexes": "ts-node scripts/fixIndexes.ts"
  },
  "keywords": [
    "notifyx",
    "backend",
    "job-notifications",
    "express",
    "typescript",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@clerk/backend": "^2.9.4",
    "@clerk/express": "^1.7.24",
    "@types/bull": "^3.15.9",
    "@types/handlebars": "^4.0.40",
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.2",
    "bull": "^4.16.5",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "razorpay": "^2.9.6",
    "svix": "^1.74.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/mongoose": "^5.11.0",
    "@types/morgan": "^1.9.0",
    "@types/multer": "^1.4.0",
    "@types/node": "^20.0.0",
    "@types/nodemailer": "^6.4.19",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  }
}
